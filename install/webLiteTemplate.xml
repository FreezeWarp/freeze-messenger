<?xml version="1.0" encoding="utf-8"?>

<interface version="3.0" name="weblite">
  <metadata>
    <title>WebPro (jQueryUI-powered)</title>
    <summary>A powerful online interface that is developed as the "default" interface of FreezeMessenger. It is essentially the "source" implementation, though as such some of the more inventive ideas out there aren't to be found in WebPro.</summary>

    <copyright>Joseph T. Parsons 2011</copyright>
    <license>GPLv3</license>
    <version>3.0</version>
  </metadata>

 <templates>
    <template name="templateStart" vars="mode">&lt;?xml version="1.0" encoding="UTF-8"?&gt;
{{if="$phrases['doctype']"}{$phrases[doctype]}{&lt;!DOCTYPE HTML&gt;}}

&lt;!-- Original Source Code Copyright Â© 2011 Joseph T. Parsons. --&gt;
&lt;html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"&gt;
&lt;head&gt;
&lt;title&gt;{{if="$phrases['brandingTitle']"}{$phrases[brandingTitle]}{FreezeMessenger}} - $title&lt;/title&gt;

&lt;meta http-equiv="Content-type" value="text/html; charset=utf-8" /&gt;
&lt;meta name="robots" content="index, follow" /&gt;
&lt;meta name="author" content="Joseph T. Parsons" /&gt;
&lt;meta name="keywords" content="{{if="$phrases['brandingKeywords']"}{$phrases[brandingKeywords]}{instant messenger, im, instant message}}" /&gt;
&lt;meta name="description" content="{{if="$phrases['brandingDescription']"}{$phrases[brandingDescription]}{FreezeMessenger-powered chat program.}}" /&gt;
{{if="$phrases['brandingFavicon']"}{&lt;link rel="icon" id="favicon" type="image/png" href="$phrases[brandingFavicon]" /&gt;}}


{{if="$layout == 'alt'"}{&lt;style&gt;
#menu { display: none; width: 0px; }
#messageListContainer { float: right; width: 50%; }
#textentryBoxMessage { float: left; width: 50%; }
#content { width: 100%; }&lt;/style&gt;}}

&lt;!-- END Styles --&gt;



&lt;!-- START Scripts --&gt;

&lt;script src="client/js/jquery-1.6.1.min.js" type="text/javascript"&gt;&lt;/script&gt;
&lt;script src="client/js/jquery.plugins.js" type="text/javascript"&gt;&lt;/script&gt;
&lt;script src="client/js/fim-all.js" type="text/javascript"&gt;&lt;/script&gt;

&lt;!-- END Scripts --&gt;
&lt;/head&gt;

&lt;body&gt;
&lt;div id="tooltext" class="tooltip-content"&gt;&lt;/div&gt;


&lt;div id="content" data-role="content"&gt;
&lt;!-- START content --&gt;
    </template>

    <template name="chat">
      <div id="roomTemplateContainer">
        <script src="client/js/fim-main.js" type="text/javascript"></script>
        <script src="client/js/fim-chat.js" type="text/javascript"></script>

        <div id="activeUsersContainer">
          {{container}{Active Users}{<div id="activeUsers">Loading...</div>}}
        </div>

        <div id="chatContainer">
          {{container}{<div id="title">
            <span id="status" class="leftPart">
              {{if="$room['options'] & 1"}{<img src="images/bookmarks.png" class="standard" title="This is an Official Room" alt="Official" />}}<br />
              <span id="refreshStatus" onclick="alert('Failed ' + totalFails + ' times. Current refreshing every ' + (timeout / 1000 + .1) + ' seconds.');"></span>
            </span>

            <div id="rightTitle" class="rightPart">
              <form action="#" onsubmit="return false;" class="rightPart">
                <button type="button" onclick="if (soundOn) { soundOn = false; $('#icon_muteSound').attr('src','/images/audio-volume-muted.png'); } else { soundOn = true; $('#icon_muteSound').attr('src','/images/audio-volume-high.png'); }" class="standard" id="icon_muteSound"></button>

                <button type="button" class="standard" title="Switch the order of posts. This will refresh the page." id="icon_reversePostOrder"></button>

                <button type="button" class="standard" id="icon_help"></button>
              </form>
            </div>

            $room[name]<br />
            <em id="topic$room[id]" style="white-space:nowrap;">$room[topic]</em>
          </div>}{
          <div id="messageListContainer">
            <div id="messageList">
            </div>
          </div>
          }}
        </div>

        <div id="textentryBoxMessage">
          <form onsubmit="var message = $('textarea#messageInput').val(); if (message.length == 0) { alert('Please enter your message.'); } else { sendMessage(message); $('textarea#messageInput').val(''); } return false;" id="sendform">{{container}{
            <div class="leftPart">Enter a Message</div>
            <div class="rightPart">
              <button type="submit" class="standard" id="icon_submit"></button>
              <button type="reset" class="standard" id="icon_reset"></button>
            </div>}{
            <div id="messageInputContainer" class="middle">
              <textarea onkeypress="if (event.keyCode == 13 && !event.shiftKey) { $('#sendform').submit(); return false; }" id="messageInput" autofocus="autofocus" placeholder="Enter your text."></textarea>
            </div>}}
          </form>
        </div>
      </div>
    </template>

    <template name="templateEnd" vars="">
&lt;!-- END content --&gt;
&lt;/div&gt;
&lt;/body&gt;
&lt;/html&gt;
    </template>
  </templates>
</interface>